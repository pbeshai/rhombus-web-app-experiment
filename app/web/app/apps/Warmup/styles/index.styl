select-color = #20B42C;

.big-message {
  margin: 200px 0;
  text-align: center;
  font-size: 4em;
  font-weight: 200;
}

.app-warmup {
  .participant-grid {
    text-align: center; /* center the grid */
  }

  .grid-cell {
    width: 5.5em;
    height: 5.5em;
    margin: 2px;
    display: inline-block;
    position: relative;
  }
  .grid-cell .participant {
    margin: 0;
    border: 0;
  }

  .grid-inner {
    position: relative;
    display: inline-block;
    margin: auto;
  }
  .grid-selecter {
    border: 5px solid select-color;
    position: absolute;
    top: -5px;
    bottom: -2px;
    left: 0;
    right: 0;
    z-index: 2;
    opacity: 0;
  }
  .grid-row {
    position: relative;
  }

  .grid-label {
    font-weight: 300;
    font-size: 2em;
    -webkit-transition: .4s opacity;
    opacity: 0;
  }

  .grid-label.selected {
    opacity: .2;
  }

  .grid-row-label {
    position: absolute;
    line-height: 3.25em;
    left: -40px;
  }
  .select-mode-row .grid-row-label {
    opacity: 1

  }

  .grid-col-label {
    width: 2.75em;
    border: 1px solid transparent;
    display: inline-block;
    margin: 2px 2px 6px;
    line-height: 1em;
  }

  .select-mode-column .grid-col-label {
    opacity: 1;
  }

  .participant-location .participant{
    background: #31B1D1;
  }

  .select-mode {

    .grid-cell {
      background: #333;
      // -webkit-transition: .2s background;
    }

    /* prevents flash of location when refreshing the page in select mode */
    .participant-location .participant{
      background: inherit;
    }
    .grid-cell .participant {
      opacity: 0;
      -webkit-transition: .2s opacity;
    }

    .grid-selecter {
      opacity: .95;
      -webkit-transition: .4s opacity;
    }
  }

  .selecting .grid-row .grid-cell{
    opacity: 0.2;
    -webkit-transition: .4s opacity;
  }

  .selecting .grid-row .grid-cell.selected {
    opacity: 1;
    -webkit-transition: 0;
  }

}